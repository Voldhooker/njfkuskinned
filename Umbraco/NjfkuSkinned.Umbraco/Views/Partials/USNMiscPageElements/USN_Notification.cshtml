@inherits UmbracoViewPage<USN.USNModels.USNBaseViewModel>

@using USNStarterKit.USNHelpers;

@{
    UsnglobalSettings globalSettings = (UsnglobalSettings) Model.GlobalSettings;

    if (globalSettings.Enable)
    {
        <!-- COOKIE NOTICE -->
        <div class="cookie-notice c2-bg closed">
            <div class="inner">
                @if (globalSettings.NotificationSecondaryHeading.HasValue())
                {
                    <p class="secondary-heading c1-text">@globalSettings.NotificationSecondaryHeading</p>
                }

                @if (globalSettings.NotificationHeading.HasValue())
                {
                    <p class="heading c5-text">@globalSettings.NotificationHeading</p>
                }

                @if (globalSettings.NotificationText.HasValue())
                {
                    <div class="text c4-text">
                        @Html.Raw(globalSettings.NotificationText)
                    </div>
                }
                <p class="link"><a class="btn btn-sm c1-bg c5-text accept-cookies" href="#">@globalSettings.AcceptNotificationButtonText</a></p>
            </div>
        </div>
        <!--// COOKIE NOTICE -->
    }
}
